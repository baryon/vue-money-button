    "rimraf": "^3.0",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "vue": "^2.6",
    "vue-loader": "^15.9",
    "vue-template-compiler": "^2.6",
    "webpack": "^5.18",
    "webpack-cli": "^4.4",
    "webpack-dev-server": "^3.11.2"
  },
  "peerDependencies": {
    "vue": "2.x || 3.x"
