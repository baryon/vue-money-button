  "main": "dist/vue-money-button.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:dist && npm run build:demo",
    "build:demo": "NODE_ENV=production webpack --config ./config/dev.js --mode production",
